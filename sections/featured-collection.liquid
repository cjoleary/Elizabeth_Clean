{% for product in section.settings.featured_collection.products %}
    {% render 'product-card', product_product: product, show_product_vendor: true %}
{% endfor %}

{% schema %}
    {
        "name": "Featured Collection",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Title",
                "default": "Featured Collection"
            },
            {
                "type": "collection",
                "id": "featured_collection",
                "label": "Collection"
            }
        ]
    }
{% endschema %}